{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile and run java",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "javac \"${file}\" && java -cp \"${fileDirname}\" ${fileBasenameNoExtension} < input.txt > output.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$javac"
        }
    ]
}